#/bin/bash

#BuildEnv is "rpi" or "debian"

if [ "$1" == "rpi" ]; then
  sed -i "s:BuildEnv=.*:BuildEnv=$1:" .env;
  sed -i "s:myimage=.*:myimage=resin\/armv7hf-node\:9-slim:" .env;
  cd run;
  cp docker-compose.$1 docker-compose.yml
fi

if [ "$1" == "debian" ]; then  
  sed -i "s:BuildEnv=.*:BuildEnv=$1:" .env;  
  sed -i "s:myimage=.*:myimage=node\:slim:" .env;
  cd run;
  cp docker-compose.$1 docker-compose.yml
fi
