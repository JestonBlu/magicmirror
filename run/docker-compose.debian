version: '3'

services:
  magicmirror:
    container_name: mm
    image: karsten13/magicmirror:${BuildEnv}
    ports:
      - "8080:8080"
    volumes:
      - ~/magic_mirror/config:/opt/magic_mirror/config
      - ~/magic_mirror/modules:/opt/magic_mirror/modules
    restart: unless-stopped
    entrypoint: /opt/magic_mirror/entrypoint.sh "node serveronly"