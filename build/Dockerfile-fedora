ARG BUILDER_IMG
ARG BASE_IMG
FROM ${BUILDER_IMG} as builder
FROM ${BASE_IMG}
LABEL maintainer="Karsten Hassel"

WORKDIR /opt/magic_mirror

# copy startscripts into container:
COPY --chmod=0777 *.sh /opt/magic_mirror/
COPY --from=builder --chmod=0777 /opt/magic_mirror /opt/magic_mirror
    
RUN set -e; \
    useradd -u 1000 node; \
    touch /etc/timezone; \
    chmod u+rwx,g+rwx,o+rwx /etc; \
    chmod u+rw,g+rw,o+rw /etc/localtime /etc/timezone;

USER node

ARG GIT_INFO
RUN set -e; \
    ./build_info.sh "Runtime" "$GIT_INFO"; \
    rm -f build_info.sh;

ARG NODE_ENV
ENV ELECTRON_DISABLE_SANDBOX=1 \
    DBUS_SESSION_BUS_ADDRESS="unix:path=/var/run/dbus/system_bus_socket" \
    NODE_ENV=${NODE_ENV} \
    MM_OVERRIDE_DEFAULT_MODULES=true \
    MM_OVERRIDE_CSS=true

EXPOSE 8080

ENTRYPOINT ["/usr/bin/tini", "--", "./entrypoint.sh"]
